{
    "name": "ROS 2 Humble SAR Drone Dev Environment",
    "image": "ros:humble-desktop-full",

    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "installOhMyZsh": true,
            "upgradePackages": true,
            "username": "ros",
            "uid": "automatic",
            "gid": "automatic"
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest",
            "ppa": true
        }
    },

    "runArgs": [
        "--network=host",
        "--privileged"
    ],

    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
        "source=${localEnv:HOME}/.Xauthority,target=/home/ros/.Xauthority,type=bind,consistency=cached"
    ],

    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
        "ROS_DISTRO": "humble",
        "ROS_VERSION": "2",
        "ROS_PYTHON_VERSION": "3",
        "ROS_LOCALHOST_ONLY": "0",
        "RMW_IMPLEMENTATION": "rmw_cyclonedds_cpp"
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-iot.vscode-ros",
                "ms-python.python",
                "ms-vscode.cpptools",
                "redhat.vscode-yaml",
                "ms-vscode.cmake-tools",
                "dotjoshjohnson.xml"
            ],
            "settings": {
                "ros.distro": "humble",
                "python.defaultInterpreter": "/usr/bin/python3",
                "C_Cpp.default.intelliSenseMode": "linux-gcc-x64"
            }
        }
    },

    "postCreateCommand": "\
        sudo apt-get update && \
        sudo apt-get install -y \
            python3-pip \
            python3-colcon-common-extensions \
            python3-rosdep \
            ros-humble-ros-gz-sim \
            ros-humble-ros-gz-bridge \
            ros-humble-ros-gz-image \
            ros-humble-nav2-bringup \
            ros-humble-robot-localization \
            ros-humble-rtabmap-ros && \
        sudo rosdep init || true && \
        rosdep update",

    "postStartCommand": "source /opt/ros/humble/setup.bash",

    "remoteUser": "ros",
    "workspaceFolder": "/workspace",
    "shutdownAction": "stopContainer"
}

